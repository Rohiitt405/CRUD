<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read Users</title>
    <link rel="stylesheet" href="../stylesheets/read.css">
</head>

<body>
    <div class="container">
        <div class="header">
            <a href="/" class="create-user-link">+ Create User</a>
            <h1 class="page-title">All Users</h1>
            <p class="page-subtitle">Manage your users and their information</p>
        </div>

        <div class="users-grid" id="usersGrid">
            <% if (users.length> 0) { %>
                <% users.forEach(function(user) { %>
                    <div class="user-card">
                        <img src="<%= user.image %>" alt="Profile" class="profile-image">
                        <div class="user-name">
                            <%= user.name %>
                        </div>
                        <div class="user-email">
                            <%= user.email %>
                        </div>
                        <div class="button-group">
                            <button class="btn btn-edit" onclick="location.href='/edit/<%= user._id %>'">Edit</button>
                            <button class="btn btn-delete"
                                onclick="location.href='/delete/<%= user._id %>'">Delete</button>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h3>No Users Yet!</h3>
                            <% } %>
        </div>

</body>

</html>